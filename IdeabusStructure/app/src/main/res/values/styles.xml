<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Custom Wheel -->
    <style name="NumberPicker" parent="CommonNumberPicker">
        <item name="android:descendantFocusability">blocksDescendants</item>
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="solidColor">@color/transparent</item>
        <item name="selectionDividerColor">@color/transparent</item>
    </style>
    <style name="CommonNumberPicker">
        <item name="android:orientation">vertical</item>
        <item name="android:fadingEdge">vertical</item>
        <item name="android:fadingEdgeLength">50dp</item>
        <item name="solidColor">#e0e0e0</item>
        <item name="selectionDividerHeight">1dp</item>
        <item name="internalLayout">@layout/view_number_picker_wheel</item>
        <item name="internalMinWidth">64dp</item>
        <item name="internalMaxHeight">240dp</item>
        <item name="middleTextColor">@color/black</item>
        <item name="virtualButtonTextAlpha">120</item>
        <item name="middleTextSize">24sp</item>
        <item name="virtualButtonTextSize">18sp</item>
    </style>



</resources>
